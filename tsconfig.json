{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "strict": true,
    "baseUrl": ".",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["./*"],
      "@moxito/theme": ["packages/theme/src"],
      "@moxito/api": ["packages/api/src"],
      "@moxito/services": ["packages/services/src/index.ts"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
